<% (1..userinfo.size).each do |i| %>
<tr>
  <td>
    <h4><%= userinfo[i - 1].first_name %> <%= userinfo[i - 1].last_name %></h4>
      <br>
    <p><%= review[i - 1].description %></p>
  </td>
  <td>
    <% (1..5).each do |j| %>
      <% if j <= review[i - 1].rating %>
        <%= fa_icon('star', class: "star-checked") %>
      <% else %>
        <%= fa_icon('star') %>
      <% end %>
    <% end %>
  </td>
  <td>
    <% if current_user && current_user.id == review[i - 1].user_id %>
      <%= link_to fa_icon('trash'), [@product, review[i - 1]], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </td>
</tr>
<% end %>