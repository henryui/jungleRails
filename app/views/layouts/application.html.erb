<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <%= yield %>
  </main>

  <%= yield :end_of_body %>

  <% if current_user %>
    <p>Signed in as <%= current_user.first_name %> | <%= link_to "Logout", [:logout], method: :destroy %></p>
  <% else %>
    <p><%= link_to 'Login', [:login], class: 'btn btn-info' %> | <%= link_to 'Signup', [:register] %></p>
  <% end %>
</body>
</html>
